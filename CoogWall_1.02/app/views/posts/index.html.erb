<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Postid</th>
      <th>Username</th>
      <th>Type</th>
      <th>Title</th>
      <th>Content</th>
      <th>Tag</th>
      <th>Date</th>
      <th>Reports</th>
      <th>Points</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.postid %></td>
        <td><%= post.username %></td>
        <td><%= post.type %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.tag %></td>
        <td><%= post.date %></td>
        <td><%= post.reports %></td>
        <td><%= post.points %></td>
        <td><%= post.comments %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
